[colors]
bar_fg = #FFFFFFFF
bar_bg = #00000000

fg = #FFCCCCCC
bg = ${xrdb:color0}
darkgray = ${xrdb:color8}
lightgray = #989898
i3_active_fg = ${xrdb:color15}
i3_active_bg = ${xrdb:color1}
i3_urgent_fg = ${xrdb:color1}
i3_urgent_bg = ${xrdb:color3}

[settings]
gap = 0
padding = 0

[bar/main]
monitor = DP-1
width = 100%
height = 26
offset-x = 0%
offset-y = 0%

foreground = ${colors.bar_fg}
background = ${colors.bar_bg}

font-0 = "Roboto Mono for Powerline:style=Bold:size=10;2"
font-1 = "Font Awesome 5 Free:size=10:style=Regular;2"
font-2 = "Font Awesome 5 Brands:size=10;2"
font-3 = "Font Awesome 5 Free:size=10:style=Solid;2"

modules-center = i3
modules-right = vpn wanip date

;TODO tray
tray-position = right
tray-padding = 8

padding-left = ${settings.padding}
padding-right = ${settings.padding}
border-top-size = ${settings.gap}
border-left-size = ${settings.gap}
border-right-size = ${settings.gap}
border-bottom-size = ${settings.gap}

[bar/extra]
monitor = HDMI-1
width = 100%
height = 26
offset-x = 0%
offset-y = 0%

foreground = ${colors.bar_fg}
background = ${colors.bar_bg}

font-0 = "Roboto Mono for Powerline:style=Bold:size=10;2"
font-1 = "Font Awesome 5 Free:size=10:style=Regular;2"
font-2 = "Font Awesome 5 Brands:size=10;2"
font-3 = "Font Awesome 5 Free:size=10:style=Solid;2"

modules-left = cpu memory volume
modules-center = i3

padding-left = ${settings.padding}
padding-right = ${settings.padding}
border-top-size = ${settings.gap}
border-left-size = ${settings.gap}
border-right-size = ${settings.gap}
border-bottom-size = ${settings.gap}

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
enable-click = true
index-sort = true
format = <label-state> <label-mode>

;mode (Such as resize)
label-mode = %mode%
label-mode-padding = 3
label-mode-foreground = ${colors.i3_active_fg}
label-mode-background = ${colors.i3_active_bg}

;unfocused workspace
label-unfocused = "%index%"
label-unfocused-foreground = ${colors.fg}
label-unfocused-background = ${colors.bg}
label-unfocused-padding = 3

;visible workspace
label-visible = "%index%"
label-visible-foreground = ${colors.darkgray}
label-visible-background = ${colors.lightgray}
label-visible-padding = 3

;focused workspace
label-focused = "%index%"
label-focused-foreground = ${colors.i3_active_fg}
label-focused-background = ${colors.i3_active_bg}
label-focused-padding = 3

;urgent workspace
label-urgent = "%index%"
label-urgent-padding = 3
label-urgent-foreground = ${colors.i3_urgent_fg}
label-urgent-background = ${colors.i3_urgent_bg}

[module/date]
type = internal/date
interval = 5
date = " %I:%M     %d-%m-%Y"
;format-background = ${xrdb:color4}
format-foreground = ${colors.fg}
label-padding = 2

[module/vpn]
type = custom/script
exec = echo ""
exec-if = systemctl is-active openvpn-client@client.service
interval = 1
format-foreground = ${colors.fg}
;format-background = ${xrdb:color10}
label-padding-left = 2

[module/wanip]
type = custom/script
exec = wanip
interval = 3
format-foreground = ${colors.fg}
;format-background = ${xrdb:color10}
label-padding = 2

[module/cpu]
type = internal/cpu
interval = 1
label = CPU %percentage%%
format-foreground = ${colors.fg}
label-padding = 2

[module/memory]
type = internal/memory
interval = 3
label = RAM %percentage_used%%
label-padding = 2
format-foreground = ${colors.fg}

[module/volume]
type = internal/volume
label-volume-padding = 2
label-volume = VOL %percentage%%
format-volume-foreground = ${colors.fg}
label-muted-padding = 2
label-muted = MUTED
format-muted-foreground = ${colors.fg}
